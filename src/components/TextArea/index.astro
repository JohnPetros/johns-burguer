---
import Label from '../Label/index.astro';

type Props = {
  id: string;
  name: string;
  placeholder: string;
};

const { id, name, placeholder } = Astro.props;
---

<div class='focus-within:text-orange-700 flex flex-col gap-2'>
  <Label id={id}>{name}</Label>
  <textarea
    id={id}
    name={name}
    placeholder={placeholder}
    class='min-height-12 rounded-md border-gray-800 p-3 focus-visible:ring-2 focus-visible:ring-orange-700 bg-gray-100 placeholder:text-gray-400 text-gray-800'
  ></textarea>
</div>
