---
import Label from '../Label/index.astro';

type Props = {
  id: string;
  name: string;
};

const { id, name } = Astro.props;
---

<div class='focus-within:text-orange-500 flex flex-col gap-2'>
  <Label id={id}>{name}</Label>
  <textarea
    id={id}
    name={name}
    class='min-height-10 rounded-md border-gray-800 p-3 focus-visible:ring-2 focus-visible:ring-orange-500 bg-gray-100 placeholder:text-gray-400 text-gray-800'
  ></textarea>
</div>
