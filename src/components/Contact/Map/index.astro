import { Icon } from '../../Icon';
---

<div class='flex flex-col items-center gap-4 p-6'>
  <h3 class='text-gray-800 text-xl font-semibold uppercase'>Where find us:</h3>
  <iframe
    src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2902.770023557238!2d-2.4242643240163035!3d43.319073471119914!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd51d834bb3d7b61%3A0x775cef7e99d0e72!2sBI-633%2C%202%2C%2048700%20Ond%C3%A1rroa%2C%20Vizcaya%2C%20Espanha!5e0!3m2!1spt-BR!2sbr!4v1708995151454!5m2!1spt-BR!2sbr'
