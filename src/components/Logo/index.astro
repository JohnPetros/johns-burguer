---
import { Image } from 'astro:assets';
import LogoImage from '../../assets/images/logo.png';

type Props = {
  size: number;
};

const { size } = Astro.props;
---

<Image
  class='logo'
  src={LogoImage}
  width={size}
  height={size}
  alt="John's Burguer"
/>

<style>
  .logo {
    border-radius: 50%;
    object-fit: cover;
  }
</style>
